datasource db {
    provider = "mongodb"
    url=env("PRISMA_PROXY_URI")
    directUrl = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model Verifications {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    createdAt DateTime @default(now())
}

model PasswordChanges {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    createdAt DateTime @default(now())
}

model Users {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    events Event[]
    groups Group[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

type Group {
    label String
    color String
}

type Event {
    start DateTime
    end DateTime
    content String
    group String
}