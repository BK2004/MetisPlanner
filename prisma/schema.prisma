datasource db {
    provider = "mongodb"
    url=env("PRISMA_PROXY_URI")
    directUrl = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model Users {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Verifications {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    createdAt DateTime @default(now())
}

model PasswordChanges {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    createdAt DateTime @default(now())
}