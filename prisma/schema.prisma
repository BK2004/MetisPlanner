datasource db {
    provider = "mongodb"
    url=env("PRISMA_PROXY_URI")
    directUrl = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model Verifications {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    createdAt DateTime @default(now())
}

model PasswordChanges {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    createdAt DateTime @default(now())
}

model Users {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    dailyPlanner DailyPlanner?
    groups Group[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model DailyPlanner {
    id     String         @id @default(auto()) @map("_id") @db.ObjectId
    user   Users          @relation(fields:[userId], references: [id])
    userId String         @db.ObjectId @unique
    data   PlannerEntry[]
    updatedAt DateTime @updatedAt
}

type Group {
    label String
    color String
}

type PlannerEntry {
    date DateTime?
    startTime DateTime?
    endTime DateTime?
    content String
    group String
}